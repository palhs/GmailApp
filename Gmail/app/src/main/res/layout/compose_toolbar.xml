<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FEFBFE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"        >

        <ImageButton
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/close24"
            android:background="#FEFBFE"
            />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@+id/back_icon"
            android:fontFamily="@font/robotolight"
            android:paddingLeft="10dp"
            android:text="Compose"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/morehoriz24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/horiz_icon"
            android:background="#FEFBFE"

            />

        <ImageButton
            android:id="@+id/send_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/horiz_icon"
            android:src="@drawable/send24"
            android:layout_marginHorizontal="16dp"
            android:background="#FEFBFE"

            />

        <ImageButton
            android:id="@+id/link_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/send_icon"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/attachment24"
            android:background="#FEFBFE"
            />



    </RelativeLayout>
</RelativeLayout>





