<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AllMailFragment"
    android:background="@color/background_all">


  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/new_meeting_btn"
      android:layout_width="170dp"
      android:layout_height="wrap_content"
      android:text="@string/new_meeting"
      android:textColor="#FFFFFF"
      android:textAllCaps="false"
      android:background="@drawable/button_meet"
      android:fontFamily="@font/light"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"/>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/join_meeting_btn"
      android:layout_width="170dp"
      android:layout_height="wrap_content"
      android:text="@string/join_a_meeting"
      android:textAllCaps="false"
      android:textColor="#0b56ce"
      android:background="@drawable/button_meet2"
      android:fontFamily="@font/robotolight"
      android:layout_marginLeft="220dp"
      android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/chattext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meetings"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"/>

</RelativeLayout>